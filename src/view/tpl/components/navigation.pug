include widgets

mixin navigation
    nav.navbar.fixed-top.navbar-expand.navbar-dark.bg-primary
        span.navbar-brand.mb-0.h1.ml-3 Authority Network
        .collapse.navbar-collapse
            ul.navbar-nav.mr-auto
                +menuItem('accounts', 'Аккаунты')#account-menu.active
                +menuItem('nodes', 'Ноды')
                +menuItem('assets', 'Ассеты')
                +menuItem('exchanges', 'Обмены')
                +menuItem('history', 'История')
                +menuItem('control', 'Управление')

            span#account-display-container.navbar-text
                a#account-display.nav-link.clickable
                    | Аккаунт:
                    span#account-display-value.d-none  не выбран
                    img.rounded-circle.ml-2(style='box-shadow: 0 1px 4px rgba(0,0,0,0.4);' src='data:image/png;base64,' width='32' height='32')
                